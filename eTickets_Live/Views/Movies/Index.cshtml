@*Model tanımlamnası*@
@model IEnumerable<Movie>

@*ViewData tanımlanması*@
@{
    ViewData["Title"] = "Film Listesi";
}

@*HTML Kodları*@
<div class="container">
    <div class="row>">
        @foreach (var item in Model)
        {
            <div class="col-md-4 col-xs-6 border-primary mb-3">
                <div class="card mb-3" style="max-width:540px;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header text-white bg-info">
                                <p class="card-text">
                                    <h5 class="card-title">
                                        @item.Name
                                        <a class="text-white float-end" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a>
                                    </h5>

                                </p>

                            </div>
                            <div class="col-md-6">
                                @*Afiş bölümü*@
                                <img src="@item.ImageURL" width="100%" alt="@item.Name">
                            </div>
                            <div class="col-md-6">
                                @*Detay Bilgiler*@
                                <div class="card-body">
                                    <p class="card-text">@item.Description</p>
                                    <p class="card-text"><b>Sinema : </b>@item.Name</p>
                                    <p class="card-text"><b>Kategori : </b>@item.MovieCategory</p>
                                    <p class="card-text"><b>Vizyon Tarihi : </b>@item.StartDate</p>
                                    <p class="card-text"><b>Bitiş Tarihi : </b>@item.EndDate</p>
                                    <p class="card-text">
                                        Durumu :
                                    </p>

                                </div>
                            </div>
                        </div>

                    </div>

                </div>

            </div>

        }
    </div>

</div>
